                        <th class="text-center">Expires</th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                        <th class="text-center"></th>
                      </tr>
                      </thead>
                      <tbody>
                      <!-- Template Row -->
                      <% for (let count = 0; count < surveys.length; count++) { %>
                      <tr>
                        <td><%= surveys[count].creator %></td>
                        <td><%= surveys[count].question %></td>
                        <td class="text-center"><%= surveys[count].expires %></td>
      
                        <td class="text-center">
                          <a href="/surveys/respond/<%= surveys[count]._id %>" class="btn btn-primary">
